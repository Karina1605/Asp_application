@model IEnumerable<WebApplication2.Models.Orders>

@{
    ViewBag.Title = "OrdersView";
}

<h2>OrdersView</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBuying)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBuying)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
