@model Lab_1.Models.Orders

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить запись?</h3>
<div>
    <h4>Заказы</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Покупатель")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>

        <dt>
            @Html.DisplayName("Продукт")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.Type)
        </dd>

        <dt>
            @Html.DisplayName("Дата заказа")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfBuying)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("К общему списку", "Index")
        </div>
    }
</div>
